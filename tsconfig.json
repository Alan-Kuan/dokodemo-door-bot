{
  "compilerOptions": {
    "module": "node16",
    "moduleResolution": "node16",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "types": [
        "vitest/importMeta"
    ]
  },
  "include": [
    "lib/**/*",
    "api/**/*",
    "test/**/*"
  ]
}
